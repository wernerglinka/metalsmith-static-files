{
  "name": "metalsmith-static-files",
  "version": "1.1.0",
  "description": "A Metalsmith plugin to copy a directory to the build directory",
  "keywords": [
    "metalsmith-static-files",
    "metalsmith-plugin",
    "metalsmith",
    "static-site"
  ],
  "type": "module",
  "main": "./lib/index.cjs",
  "module": "./lib/index.js",
  "exports": {
    "import": "./lib/index.js",
    "require": "./lib/index.cjs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wernerglinka/metalsmith-static-files.git"
  },
  "files": [
    "lib",
    "CHANGELOG.md"
  ],
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "author": "Werner Glinka (https://glinka.co)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wernerglinka/metalsmith-static-files/issues"
  },
  "homepage": "https://github.com/wernerglinka/metalsmith-static-files#readme",
  "dependencies": {
    "fs-extra": "^11.3.0"
  },
  "devDependencies": {
    "auto-changelog": "^2.5.0",
    "c8": "^10.1.3",
    "depcheck": "^1.4.7",
    "dotenv": "^16.4.7",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-node": "^11.1.0",
    "globals": "^16.0.0",
    "metalsmith": "^2.6.3",
    "microbundle": "^0.15.1",
    "mocha": "^11.1.0",
    "prettier": "^3.5.3",
    "release-it": "18.1.2"
  },
  "scripts": {
    "build": "microbundle --entry src/index.js --output lib/index.js --target node -f esm,cjs --strict --generateTypes=false --no-compress --exports named",
    "changelog": "auto-changelog -u --commit-limit false --ignore-commit-pattern '^((dev|chore|ci):|Release)'",
    "coverage": "c8 report --reporter=text-lcov > ./coverage.info",
    "format": "prettier --write \"**/*.{yml,md,js,json}\"",
    "format:check": "prettier --list-different \"**/*.{yml,md,js,json}\"",
    "lint": "eslint --fix .",
    "lint:check": "eslint --fix-dry-run .",
    "prepublishOnly": "npm run build",
    "release": "npm run build && GITHUB_TOKEN=$(grep GITHUB_TOKEN .env | cut -d '=' -f2) node -r dotenv/config ./node_modules/.bin/release-it . ",
    "release:check": "npm run lint:check && npm run build && GITHUB_TOKEN=$(grep GITHUB_TOKEN .env | cut -d '=' -f2) node -r dotenv/config ./node_modules/.bin/release-it . --dry-run",
    "test": "c8 mocha",
    "test:e2e": "serve -l 3000 test/fixtures",
    "depcheck": "depcheck"
  },
  "engines": {
    "node": ">=20"
  },
  "publishConfig": {
    "access": "public"
  }
}
